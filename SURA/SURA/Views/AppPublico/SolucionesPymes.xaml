                    <Image Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                           WidthRequest="100"
                           HeightRequest="50"
                           Source="negocioprotegido"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"/>

                    <Label Grid.Row="3" Grid.Column="1"
