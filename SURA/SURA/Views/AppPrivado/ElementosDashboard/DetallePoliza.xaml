                    <Label Grid.Column="2"
                               Grid.Row="0"
                               VerticalOptions="Center"
                               HorizontalTextAlignment="Start"
                               TextColor="#0033A0"
                               FontAttributes="None"
                               FontSize="Small">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span x:Name="sumaAsegurada"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </Grid>
            </Frame>

