    <ContentView.Content>
        <Grid BackgroundColor="White"
            RowSpacing="1"
            AbsoluteLayout.LayoutBounds="0, 0, 1, 1" 
            AbsoluteLayout.LayoutFlags="All"
              HeightRequest="100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="5"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="2"/>
            </Grid.RowDefinitions>

            <!--<Frame Padding="0"
                       CornerRadius="0"
                       Grid.Column="0"
                       Grid.ColumnSpan="4"
                       Grid.Row="1"
                       HasShadow="False"
                       BackgroundColor="White"  HeightRequest="50"/>-->

            <StackLayout Grid.Column="1"
                             Grid.ColumnSpan="2"
                             Grid.Row="1"
                             Orientation="Horizontal" 
                             VerticalOptions="Center"
                             HorizontalOptions="CenterAndExpand">
                <Label VerticalOptions="CenterAndExpand"
                           HorizontalOptions="CenterAndExpand"
                           TextColor="#0033A0"
                           FontAttributes="Bold"
                           FontSize="Small">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Riesgo asegurado: "/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Picker x:Name="pickerNumeroRiesgo" 
                            BackgroundColor="Transparent" 
                            TextColor="Blue"
                            FontAttributes="Bold"
                            FontSize="Small"
                            Title="Seleccione"
                            SelectedIndex="0"
                            WidthRequest="20"
                            IsEnabled="False"
                            SelectedIndexChanged="PickerNumeroRiesgo_SelectedIndexChanged"/>
                <Image x:Name="iconChevron" 
                       Source="chevron"
                       IsVisible="False"
                       BackgroundColor="Transparent"
                       Aspect="AspectFit"
                       Rotation="90" 
                       HorizontalOptions="Start"/>

            </StackLayout>

            <Frame x:Name="frameNumeroRiesgo"
                   Padding="0"
                   CornerRadius="0"
                   Grid.Column="0"
                   Grid.ColumnSpan="4"
                   Grid.Row="2"
                   HasShadow="False"
                   BackgroundColor="White"
                   HeightRequest="50">
                <Grid VerticalOptions="FillAndExpand">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="1"
                               Grid.Row="0"
                               VerticalOptions="Center"
                               HorizontalTextAlignment="Start"
                               TextColor="#0033A0"
                               FontAttributes="Bold"
                               FontSize="Small"
                               Text="Número riesgo"/>
                    <Label Grid.Column="2"
                               Grid.Row="0"
                               x:Name="numeroRiesgo"
                               VerticalOptions="Center"
                               HorizontalTextAlignment="Start"
                               TextColor="#0033A0"
                               FontAttributes="None"
                               FontSize="Small"/>
                </Grid>
            </Frame>

            <Frame x:Name="framesumaAsegurada"
